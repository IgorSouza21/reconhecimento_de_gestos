<CameraClick>:
    orientation: 'vertical'
    BoxLayout:
        Image:
            id: cam1
            width: 640
            height: 480
        Image:
            id: cam2
            width: 640
            height: 480
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'min Y'
            BoxLayout:
                Slider:
                    id: minY
                    min: root.min
                    max: root.max
                    value: root.minY
                Label:
                    text: str(int(minY.value))
            Label:
                text: 'min Cr'
            BoxLayout:
                Slider:
                    id: minCr
                    min: root.min
                    max: root.max
                    value: root.minCr
                Label:
                    text: str(int(minCr.value))
            Label:
                text: 'min Cb'
            BoxLayout:
                Slider:
                    id: minCb
                    min: root.min
                    max: root.max
                    value: root.minCb
                Label:
                    text: str(int(minCb.value))

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'max Y'
            BoxLayout:
                Slider:
                    id: maxY
                    min: root.min
                    max: root.max
                    value: root.maxY
                Label:
                    text: str(int(maxY.value))
            Label:
                text: 'max Cr'
            BoxLayout:
                Slider:
                    id: maxCr
                    min: root.min
                    max: root.max
                    value: root.maxCr
                Label:
                    text: str(int(maxCr.value))
            Label:
                text: 'max Cb'
            BoxLayout:
                Slider:
                    id: maxCb
                    min: root.min
                    max: root.max
                    value: root.maxCb
                Label:
                    text: str(int(maxCb.value))

