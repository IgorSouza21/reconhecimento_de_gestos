<CameraClick>:
    orientation: 'vertical'
    Camera:
        id: camera
        resolution: (800, 600)
        play: False
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'min Y'
            BoxLayout:
                Slider:
                    id: minY
                    min: root.min
                    max: root.max
                Label:
                    text: str(int(minY.value))
            Label:
                text: 'min Cr'
            BoxLayout:
                Slider:
                    id: minCr
                    min: root.min
                    max: root.max
                Label:
                    text: str(int(minCr.value))
            Label:
                text: 'min Cb'
            BoxLayout:
                Slider:
                    id: minCb
                    min: root.min
                    max: root.max
                Label:
                    text: str(int(minCb.value))

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'max Y'
            BoxLayout:
                Slider:
                    id: maxY
                    min: root.min
                    max: root.max
                Label:
                    text: str(int(maxY.value))
            Label:
                text: 'max Cr'
            BoxLayout:
                Slider:
                    id: maxCr
                    min: root.min
                    max: root.max
                Label:
                    text: str(int(maxCr.value))
            Label:
                text: 'max Cb'
            BoxLayout:
                Slider:
                    id: maxCb
                    min: root.min
                    max: root.max
                Label:
                    text: str(int(maxCr.value))

    ToggleButton:
        text: 'Play'
        on_press: camera.play = not camera.play
        size_hint_y: None
        height: '30dp'
    Button:
        text: 'Capture'
        size_hint_y: None
        height: '30dp'
        on_press: root.capture()